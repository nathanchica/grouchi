{
    "name": "grouchi",
    "version": "1.0.0",
    "description": "A HTMX + TailwindCSS + Express app about my cats, Groucho and Chica!",
    "homepage": "https://github.com/nathanchica/grouchi#readme",
    "bugs": {
        "url": "https://github.com/nathanchica/grouchi/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/nathanchica/grouchi.git"
    },
    "license": "ISC",
    "author": "Nathan Chica",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:css\"",
        "dev:server": "tsx watch index.ts",
        "dev:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/css/output.css --watch",
        "start": "tsx index.ts",
        "build": "tsc",
        "build-css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/css/output.css --minify",
        "build:all": "npm run build && npm run build-css && npm run postbuild",
        "postbuild": "cp -r public dist/ && cp -r views dist/",
        "start:prod": "node dist/index.js",
        "vercel-build": "npm run build:all",
        "typecheck": "tsc --noEmit",
        "lint": "eslint . --fix",
        "test": "vitest run --coverage",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "prepare": "husky"
    },
    "dependencies": {
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "openai": "^5.19.1"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,md,html,css}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@tailwindcss/cli": "^4.1.12",
        "@types/express": "^5.0.3",
        "@types/node": "^24.3.0",
        "@typescript-eslint/eslint-plugin": "^8.39.1",
        "@typescript-eslint/parser": "^8.39.1",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "concurrently": "^9.2.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
        "happy-dom": "^18.0.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14",
        "tailwindcss": "^4.1.12",
        "tsx": "^4.20.4",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
    }
}
