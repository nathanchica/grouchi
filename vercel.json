{
    "buildCommand": "npm run build:all",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "functions": {
        "api/index.js": {
            "maxDuration": 10
        }
    },
    "routes": [
        {
            "src": "/css/(.*)",
            "dest": "/public/css/$1"
        },
        {
            "src": "/img/(.*)",
            "dest": "/public/img/$1"
        },
        {
            "src": "/favicon.ico",
            "dest": "/public/favicon.ico"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index"
        }
    ]
}
